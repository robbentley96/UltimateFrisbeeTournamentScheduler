<Window x:Class="TournamentSchedulerGUI.PoolsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TournamentSchedulerGUI"
        mc:Ignorable="d"
        Title="PoolsWindow" Height="400" Width="400">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="4*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="4*"/>
		</Grid.RowDefinitions>
		<TextBlock x:Name="PoolA" Text="Pool A" Grid.Column="0" Grid.Row="0" FontSize="24" Margin="65,0,0,0"/>
		<TextBlock x:Name="PoolB" Text="Pool B" Grid.Column="1" Grid.Row="0" FontSize="24" Margin="65,0,0,0"/>
		<TextBlock x:Name="PoolC" Text="Pool C" Grid.Column="0" Grid.Row="2" FontSize="24" Margin="65,0,0,0"/>
		<TextBlock x:Name="PoolD" Text="Pool D" Grid.Column="1" Grid.Row="2" FontSize="24" Margin="65,0,0,0"/>
		<ListBox x:Name="ListPoolA" Grid.Column="0" Grid.Row="1"/>
		<ListBox x:Name="ListPoolB" Grid.Column="1" Grid.Row="1"/>
		<ListBox x:Name="ListPoolC" Grid.Column="0" Grid.Row="3"/>
		<ListBox x:Name="ListPoolD" Grid.Column="1" Grid.Row="3"/>
	</Grid>
</Window>
